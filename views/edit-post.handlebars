<div class="card">
  <div class="card-header">
      <h2>Edit Post</h2>
  </div>

  <form id="edit-post-form" class="card-body">
    <input type="hidden" id="post-id" name="post_id" value="{{post.id}}" />

    <label class="form-label" for="post-title">Title</label>
    <input type="text" id="post-title" name="post-title" value="{{post.title}}" class="form-input" />

    <label class="form-label" for="post-body">Content</label>
    <textarea id="post-body" name="post-body" class="form-input">{{post.body}}</textarea>

    <button type="submit" class="btn">Update</button>

    <button type="button" id="delete-btn" class="btn">Delete</button>
  </form>
</div>

<script src='/js/edit.js'></script>