<div class="card">
    <div class="card-header">
      <h2>Sign Up</h2>
    </div>
  <form id="signup-form" class="card-body">
      <div class="container">
        <label for="username-input-signup"><b>Username:</b></label>
        <input type="text" name="username" id="username-input-signup" required>
    
        <label for="password-input-signup"><b>Password:</b></label>
        <input type="password" name="password" id="password-input-signup" required>
    
        <button type="submit" id="signup-btn" class="btn">Sign Up</button>
      </div>
      <a href="/login">Already have an account? Log in instead</a>
    </form>
  </div>
  
  <script src='/js/signup.js'></script>