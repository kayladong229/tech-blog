<div class='card'>
    <div class="card-header">
      <h2>New Post</h2>
    </div>
  
    <form id='new-post-form' class='card-body'>
      <div class="container">
        <label for='post-title'><b>Add a Title:</b></label>
        <input type='text' name='post-title' class='form-input' required/>

        <label for='post-body'><b>Add Content:</b></label>
        <textarea name="post-body" class='form-input' required>
        </textarea>

        <button type='submit' class='btn'>Create Post</button>
      </div>
    </form>
  </div>
  <script src='/js/new.js'></script>